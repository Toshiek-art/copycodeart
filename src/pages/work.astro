---
import BaseLayout from '../layouts/BaseLayout.astro';
import { projects } from '../data/projects';

const items = projects.filter(p => p.status === 'published' && p.visible);
---
<BaseLayout title="Work â€” CopyCodeArt">
  <h1 class="text-2xl font-bold mb-6">Work</h1>
  <div class="grid sm:grid-cols-2 gap-6">
    {items.map(p => (
      <a href={`/work/${p.slug}`} class="block border p-4 rounded-lg hover:opacity-90">
        <h2 class="font-semibold">{p.title}</h2>
        <p class="text-sm opacity-80">{p.excerpt}</p>
      </a>
    ))}
  </div>
</BaseLayout>
