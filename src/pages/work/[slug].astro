---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { projects } from '../../data/projects';
import ProjectTemplate from '../../templates/ProjectTemplate.astro';

export async function getStaticPaths() {
  return projects
    .filter(p => p.status === 'published')
    .map(p => ({ params: { slug: p.slug } }));
}

const standalone = Astro.url.searchParams.get('standalone') === '1';

const pages = import.meta.glob('../../content/work/*.astro'); // lazy imports

const { slug } = Astro.params;
const item = projects.find(p => p.slug === slug);
if (!item) throw new Error(`Project not found: ${slug}`);

// trova la chiave a prescindere dal prefisso
const key = Object.keys(pages).find(k => k.endsWith(`/content/work/${slug}.astro`));
if (!key) throw new Error(`Body not found for: ${slug}`);

const bodyModule = await pages[key]();
---
<BaseLayout title={`${item.title} — Work`} noindex={standalone}>
  {!standalone && <nav class="mb-6"><a href="/work">← Back to Work</a></nav>}
  <ProjectTemplate item={item}>
    <bodyModule.default />
  </ProjectTemplate>
  {standalone && (
    <a href="/contact" class="fixed bottom-3 left-3 right-3 mx-auto max-w-md text-center py-3 border rounded-lg">
      Work with me
    </a>
  )}
</BaseLayout>
