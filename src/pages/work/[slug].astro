---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { projects } from '../../data/projects';
import ProjectTemplate from '../../templates/ProjectTemplate.astro';

export async function getStaticPaths() {
  return projects
    .filter((p) => p.status === 'published')
    .map((p) => ({ params: { slug: p.slug } }));
}

const standalone = Astro.url.searchParams.get('standalone') === '1';

// usa path assoluto per evitare differenze tra dev/build
const modules = import.meta.glob('/src/content/work/*.astro'); // { [path]: () => import() }

const { slug } = Astro.params;
const item = projects.find((p) => p.slug === slug);
if (!item) throw new Error(`Project not found: ${slug}`);

// trova il modulo giusto in modo agnostico rispetto al prefisso
const match = Object.entries(modules).find(([path]) =>
  path.endsWith(`/content/work/${slug}.astro`)
);
if (!match) throw new Error(`Body not found for: ${slug}`);

const Body = (await match[1]()).default;
---
<BaseLayout title={`${item.title} — Work`} noindex={standalone}>
  {!standalone && <nav class="mb-6"><a href="/work">← Back to Work</a></nav>}
  <ProjectTemplate item={item}>
    <Body />
  </ProjectTemplate>
  {standalone && (
    <a href="/contact" class="fixed bottom-3 left-3 right-3 mx-auto max-w-md text-center py-3 border rounded-lg">
      Work with me
    </a>
  )}
</BaseLayout>
