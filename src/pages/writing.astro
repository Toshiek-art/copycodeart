---
import BaseLayout from "../layouts/BaseLayout.astro";
import writings from "../data/writing";
const items = writings.filter(w => w.status === "published" && w.visible);
---
<BaseLayout title="Writing â€” CopyCodeArt" description="Copywriting samples and notes.">
  <section class="max-w-3xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4">Writing</h1>
    <ul class="grid gap-4">
      {items.map(w => (
        <li class="border rounded-lg p-4 bg-white">
          <a class="font-semibold underline" href={`/writing/${w.slug}`}>{w.title}</a>
          <p class="text-gray-600 mt-1">{w.excerpt}</p>
          <div class="mt-2 text-sm">
            <a class="underline" href={`/writing/${w.slug}?standalone=1`}>Open as mini-landing</a>
          </div>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
